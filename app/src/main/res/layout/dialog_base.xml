<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/base_dialog_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_motorcycle"
        android:tint="@color/accent"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/base_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Yeayy!!"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:fontFamily="@font/avenir_black" />

    <TextView
        android:id="@+id/base_dialog_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pembayaran anda telah berhasil."
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_book" />

    <Button
        android:id="@+id/base_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="34dp"
        android:text="kembali"
        android:background="@drawable/shape_button"
        android:fontFamily="@font/avenir_black" />

</LinearLayout>